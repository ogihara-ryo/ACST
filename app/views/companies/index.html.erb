<% breadcrumb :company_index %>
<h1><%= t('views.company.index') %></h1>
<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.code %></td>
        <td><%= company.name %></td>
        <td><%= t("views.company.#{company.type.downcase}") %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path %>
