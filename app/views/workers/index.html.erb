<% breadcrumb :worker_index %>
<h1><%= t('views.worker.index') %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Division</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.name %></td>
        <td><%= worker.division.name %></td>
        <td><%= link_to 'Show', worker %></td>
        <td><%= link_to 'Edit', edit_worker_path(worker) %></td>
        <td><%= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Worker', new_worker_path %>

<br><hr><br>

<p>
  <%= link_to t('views.link_to.csv_download'), workers_path(format: :csv) %>
</p>

<p>
  <%= form_tag import_workers_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag t('views.link_to.csv_upload') %>
  <% end %>
</p>
